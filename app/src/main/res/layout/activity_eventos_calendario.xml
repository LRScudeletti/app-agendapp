<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalendarioEventosActivity">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarViewEventos"
        app:headerColor="@color/corBranco"
        app:headerLabelColor="@color/corPreto"
        app:previousButtonSrc="@drawable/esquerda_calendario_icone"
        app:forwardButtonSrc="@drawable/direita_calendario_icone"
        app:todayLabelColor="@color/corVermelho"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvEventos"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>